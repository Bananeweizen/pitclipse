<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>pitclipse</artifactId>
    <groupId>org.pitest</groupId>
    <version>0.28.3.20121018-0834</version>
  </parent>
  <artifactId>pitclipse-plugin</artifactId>
  <packaging>pom</packaging>
  <modules>
    <module>org.pitest.pitclipse.core</module>
    <module>org.pitest.pitclipse.ui</module>
    <module>org.pitest.pitclipse.feature</module>
    <module>org.pitest.pitclipse.site</module>
  </modules>
  <properties>
    <tycho.version>0.15.0</tycho.version>
    <local.p2.url>http://localhost:8081/nexus/content/groups/local-p2-mirror/</local.p2.url>
  </properties>
  <repositories>
    <repository>
      <id>local.repo</id>
      <layout>p2</layout>
      <url>${local.p2.url}</url>
    </repository>
    <repository>
      <id>p2.snapsnots</id>
      <layout>p2</layout>
      <url>http://localhost:8081/nexus/content/repositories/snapshots/.meta/p2/</url>
    </repository>   
    <repository>
      <id>p2.releases</id>
      <layout>p2</layout>
      <url>http://localhost:8081/nexus/content/repositories/releases/.meta/p2/</url>
    </repository>   
  </repositories>
  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho.version}</version>
        <extensions>true</extensions>
      </plugin>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <version>${tycho.version}</version>
        <configuration>
          <resolver>p2</resolver>
          <pomDependencies>consider</pomDependencies>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>ui-test</id>
      <modules>
        <module>pitclipse-ui.tests</module>
      </modules>
    </profile>
  </profiles>
</project>
